#      define OSHMEM_MODULE_DECLSPEC     __opal_attribute_visibility__("default")
#    endif
#    ifndef OSHMEM_DESTRUCTOR
#      define OSHMEM_DESTRUCTOR     	__opal_attribute_destructor__
#    endif
#  else
#    ifndef OSHMEM_DECLSPEC
#      define OSHMEM_DECLSPEC
#    endif
